<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessJourney" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorPrimaryVariant">@color/night_primary_variant</item>

        <item name="colorPrimaryContainer">@color/black</item>
        <item name="android:windowBackground">#2C2A2A</item>
        <item name="colorOnPrimary">@color/light_fields_container</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_fields_container</item>
        <item name="colorSecondaryVariant">#CFD3CF</item>
        <item name="colorOnSecondary">#A4ABA2</item>
        <item name="bottomNavBackground">#474947</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/Threedotcolor</item>
        <item name="colorTertiary">@color/white</item>
    </style>

    <style name="Threedotcolor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>
</resources>